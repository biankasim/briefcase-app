<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Color when the switch is in the "off" state -->
    <item android:state_checked="false" android:color="@color/yellow_light" />

    <!-- Color when the switch is in the "on" state -->
    <item android:state_checked="true" android:color="@color/primary" />

    <!-- Default color -->
    <item android:color="@color/yellow_light" />
</selector>
