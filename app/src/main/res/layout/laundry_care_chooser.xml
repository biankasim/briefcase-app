<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/title_washing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Washing"
        android:textSize="@dimen/title_size_smaller"/>


    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <RadioGroup
        android:id="@+id/washing_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



        <RadioButton
            android:id="@+id/washing_hand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/care_washing_hand"
            android:background="@drawable/radio_selector"
            android:button="@drawable/care_washing_hand" />

        <RadioButton
            android:id="@+id/washing_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/care_washing_no"
            android:background="@drawable/radio_selector"
            android:button="@drawable/care_washing_no"/>
        <RadioButton
            android:id="@+id/washing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/care_washing"
            android:background="@drawable/radio_selector"
            android:button="@drawable/care_washing"/>

        <RadioButton
            android:id="@+id/washing_gentle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/care_washing_gentle"
            android:background="@drawable/radio_selector"
            android:button="@drawable/care_washing_gentle" />

        <RadioButton
            android:id="@+id/washing_gentle_very"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/care_washing_gentle_very"
            android:background="@drawable/radio_selector"
            android:button="@drawable/care_washing_gentle_very" />
        <RadioButton
            android:id="@+id/washing_temp_low"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/care_washing_temp_low"
            android:background="@drawable/radio_selector"
            android:button="@drawable/care_washing_temp_low" />

        <RadioButton
            android:id="@+id/washing_temp_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/care_washing_temp_medium"
            android:background="@drawable/radio_selector"
            android:button="@drawable/care_washing_temp_medium" />

        <RadioButton
            android:id="@+id/washing_temp_high"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/care_washing_temp_high"
            android:background="@drawable/radio_selector"
            android:button="@drawable/care_washing_temp_high" />

        <RadioButton
            android:id="@+id/washing_30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/care_washing_30"
            android:background="@drawable/radio_selector"
            android:button="@drawable/care_washing_30"/>

        <RadioButton
            android:id="@+id/washing_40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/care_washing_40"
            android:background="@drawable/radio_selector"
            android:button="@drawable/care_washing_40"/>

        <RadioButton
            android:id="@+id/washing_60"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/care_washing_60"
            android:background="@drawable/radio_selector"
            android:button="@drawable/care_washing_60"/>
    </RadioGroup>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/title_bleaching"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bleaching"
        android:textSize="@dimen/title_size_smaller" />

    <RadioGroup
        android:id="@+id/bleaching_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radio_bleaching"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/care_bleach"
            android:contentDescription="@string/care_bleach"
            android:background="@drawable/radio_selector"/>

        <RadioButton
            android:id="@+id/radio_bleaching_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/care_bleach_no"
            android:contentDescription="@string/care_bleach_no"
            android:background="@drawable/radio_selector" />

        <RadioButton
            android:id="@+id/radio_bleaching_non_chlorine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/care_bleach_non_clorine"
            android:contentDescription="@string/care_bleach_non_clorine"
            android:background="@drawable/radio_selector"/>

    </RadioGroup>

    <TextView
        android:id="@+id/title_tumble_dry"
