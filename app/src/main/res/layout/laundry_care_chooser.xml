            android:id="@+id/radio_tumble_dry_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/radio_selector"
            android:contentDescription="@string/care_tumble_dry_no"
            android:button="@drawable/care_tumble_dry_no" />

        <RadioButton
            android:id="@+id/radio_tumble_dry_no_heat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/radio_selector"
            android:contentDescription="@string/care_tumble_dry_no_heat"
            android:button="@drawable/care_tumble_dry_no_heat" />

        <RadioButton
            android:id="@+id/radio_tumble_dry_low_heat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/radio_selector"
            android:contentDescription="@string/care_tumble_dry_low_heat"
            android:button="@drawable/care_tumble_dry_low_heat" />

        <RadioButton
            android:id="@+id/radio_tumble_dry_medium_heat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/radio_selector"
            android:contentDescription="@string/care_tumble_dry_medium_heat"
            android:button="@drawable/care_tumble_dry_medium_heat"/>

        <RadioButton
            android:id="@+id/radio_tumble_dry_high_heat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/radio_selector"
            android:contentDescription="@string/care_tumble_dry_high_heat"
            android:button="@drawable/care_tumble_dry_high_heat" />

    </RadioGroup>

    <TextView
        android:id="@+id/title_ironing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ironing"
        android:textSize="@dimen/title_size_smaller"/>
    <RadioGroup
        android:id="@+id/ironing_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radio_ironing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/care_ironing"
            android:background="@drawable/radio_selector"
            android:contentDescription="@string/care_ironing"/>

        <RadioButton
            android:id="@+id/radio_ironing_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/care_ironing_no"
            android:contentDescription="@string/care_ironing_no"
            android:background="@drawable/radio_selector"/>

        <RadioButton
            android:id="@+id/radio_ironing_temp_low"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/care_ironing_temp_low"
            android:contentDescription="@string/care_ironing_temp_low"
            android:background="@drawable/radio_selector" />

        <RadioButton
            android:id="@+id/radio_ironing_temp_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/care_ironing_temp_medium"
            android:contentDescription="@string/care_ironing_temp_medium"
            android:background="@drawable/radio_selector"/>

        <RadioButton
            android:id="@+id/radio_ironing_temp_high"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/care_ironing_temp_high"
            android:button="@drawable/care_ironing_temp_high"
            android:background="@drawable/radio_selector" />


    </RadioGroup>

    <TextView
        android:id="@+id/title_dry_cleaning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dry Cleaning"
        android:textSize="@dimen/title_size_smaller"/>

    <RadioGroup
        android:id="@+id/dry_cleaning_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radio_dry_cleaning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/care_dry_clean"
            android:background="@drawable/radio_selector"
            android:button="@drawable/care_dry_clean" />

        <RadioButton
            android:id="@+id/radio_dry_cleaning_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/care_dry_clean_no"
            android:background="@drawable/radio_selector"
            android:button="@drawable/care_dry_clean_no" />

    </RadioGroup>

